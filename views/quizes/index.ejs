<div align = "center">
<h4><p>Seleccione pregunta:<br><br></p></h4>
<table>
<% var i; for (i=0; i < quizes.length; i++) { %>
   <tr>
    <td align="left"><h4><%= quizes[i].tema %>:&nbsp&nbsp</h4></td>
     <td align="left"><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
     <% if (session.user)  { %>
        <td align="left"><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
        <td>
          <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
             <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
               borrar
             </button>
          </form>
        </td>
      <% } %>
   </tr>
<% } %>
</table>
 <% if (session.user)  { %>
    <br><br><a href="/quizes/new" align="left"><button type="button">Cree una nueva</button></a>
<% } %>
<h4><p><br><br>O busque una que contenga...<br><br></p></h4>
<form method="get" action="/quizes">
  <input type="text" name="search" placeholder="Texto a buscar"/>
  <input type="submit" value="Enviar"/>
</form>
</div>
<%
///  Si se llega por timeout, presentar el mensaje y resetear timeout
 if (session.timeout) {
    session.timeout = false;
%>
<script>
   alert("Tiempo agotado. Vuelve a hacer login");
</script>
<% } %>
