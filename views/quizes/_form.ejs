<div align="center">
<table>
<tr><td>



<label for="preg" class="rem">Pregunta:</label>
</td>
<% if ( quiz.pregunta==="Pregunta") {
   input_data="placeholder=";
} else {
   input_data="value=";
}
%>
<td>
<input type="text" id="preg" name="quiz[pregunta]" <%= input_data %>"<%= quiz.pregunta %>"/>
</td></tr>
<tr><td>
<label for="resp" class="rem">Respuesta:</label>
</td><td>
<input type="text" id="resp" name="quiz[respuesta]" <%= input_data %>"<%= quiz.respuesta %>"/>
</td></tr>
<tr><td>
<label for="tema" class="rem">Tema:</label>
</td><td>
<select name="quiz[tema]">

    <%

//  Hay que buscar el tema seleccionado para poner option a selected:

    var temas = ["Otro","Humanidades","Ocio","Ciencia","Tecnologia"];
        for (n_tema in temas) {
           var tema_sel=temas[n_tema];
           var selected = "";
           if (temas[n_tema]===quiz.tema) {
              selected=" selected";
           } else {
             selected="";
           }
     %>
   <option value="<%= tema_sel %>"<%= selected %>><%= temas[n_tema] %></option>
      <% } //  del for %>
</select>
</td></tr>
<tr><td></td><td>
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Salvar">
</td></tr>
</table>
</div>
